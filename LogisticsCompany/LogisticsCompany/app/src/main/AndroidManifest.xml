<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.logisticscompany">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.DriverEditProfileActivity"></activity>
        <activity android:name=".activities.DriverRegistrationActivity" />
        <activity android:name=".activities.DriverLoginActivity" />
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.TripDetailsActivity" />
        <activity android:name=".activities.CompletedTripsActivity" />
        <activity android:name=".activities.CurrentTripsActivity" />
        <activity android:name=".activities.AvailableTripsActivity" />
        <activity android:name=".activities.AdminEditTripActivity" />
        <activity android:name=".activities.DriversDashboardActivity" />
        <activity android:name=".activities.ViewDriversInfoActivity" />
        <activity android:name=".activities.ViewTripsActivity" />
        <activity android:name=".activities.AddTripActivity" />
        <activity android:name=".activities.AdminEditProfileActivity" />
        <activity android:name=".activities.AdminLoginActivity" />
        <activity android:name=".activities.AdminRegistrationActivity" />
        <activity android:name=".activities.AdminDashboardActivity" />
        <activity android:name=".activities.SlashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>