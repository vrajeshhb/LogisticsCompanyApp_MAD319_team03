<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardMaxElevation="@dimen/_6sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvDriverName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tvDriverLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDriverName"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDriverLocation"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tvVehicleNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvVehicleType"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000" />


            <Button
                android:id="@+id/btn_book"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="40dp"
                android:layout_below="@+id/tvVehicleNumber"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_design"
                android:text="Hire Driver"
                android:textAllCaps="false" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>