<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardMaxElevation="@dimen/_6sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tvVehicleNO"
                android:layout_below="@+id/tvVehicleType"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvMessage"
                android:layout_below="@+id/tvVehicleNO"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvHireby"
                android:layout_below="@+id/tvMessage"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_below="@+id/tvHireby"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRejact"
                android:text="Reject"
                android:layout_below="@+id/tvStatus"
                android:layout_margin="@dimen/_10sdp"
                android:textAllCaps="false"
                android:background="@drawable/button_design"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="40dp" />





            <Button
                android:id="@+id/btnAccept"
                android:text="Accept"
                android:layout_below="@+id/tvStatus"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                android:textAllCaps="false"
                android:background="@drawable/button_design"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="40dp" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>