<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cd_search_ride"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardMaxElevation="@dimen/_6sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvTypeOfLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tvPicupTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTypeOfLoad"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvPicupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPicupTime"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvDeliveryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPicupLocation"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvDeliveryLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDeliveryTime"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvCostperHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDeliveryLocation"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvTripDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCostperHour"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tvBookedby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTripDate"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />


            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBookedby"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_9ssp"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="#000" />

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="@dimen/_65ssp"
                android:layout_height="40dp"
                android:layout_below="@+id/tvStatus"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/button_design"
                android:fontFamily="@font/poppinsmedium"
                android:text="Info"
                android:textAllCaps="false" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>